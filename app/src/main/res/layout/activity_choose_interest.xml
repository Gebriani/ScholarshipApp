<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15sp"
    android:layout_marginRight="15sp">

    <Button
        android:id="@+id/choose_interest_done_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="@string/txt_done"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/choose_interest_done_button"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/choose_interest_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/title_personalize_interest"
            android:textColor="@color/semiBlack"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/choose_interest_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/desc_personalize_interest" />

        <com.orcaella.scholarshipapp.util.AutoFitGridView
            android:id="@+id/choose_interest_tag_rvlist"
            android:layout_width="match_parent"
            android:columnWidth="120dp"
            android:layout_height="match_parent" />


    </LinearLayout>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/choose_interest_progressBar"/>


</RelativeLayout>

